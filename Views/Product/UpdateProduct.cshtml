@using MongoTestPro.Entities
@model MongoTestPro.Dtos.ProductDtos.GetByIdProductDto

@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "UpdateCategory";
}

<h1>UpdateProduct</h1>

<hr />
<div class="row">
    <div class="col-2"></div>
    <div class="col-md-8">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group my-3">
                <label asp-for="CategoryId" class="control-label">Kategori</label>
                <select asp-for="CategoryId" class="form-control">
                    <option>Kategori Seçiniz</option>
                    @foreach (var item in (List<Category>)ViewBag.categories)
                    {
                        <option value="@item.CategoryId">@item.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Name" class="control-label">Ürün Adı</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Stock" class="control-label">Stok</label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <label asp-for="Price" class="control-label">Fiyat (TL)</label>
                <input type="text" asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
           @*  <div class="form-group my-3">
                <label asp-for="ImageUrl" class="control-label">Resim</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div> *@
            <div class="form-group my-3">
                <label asp-for="ImageFile" class="control-label">Resim</label>
                <input type="file" asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group my-3">
                <input type="hidden" asp-for="ImageUrl"/>
                <input type="hidden" asp-for="ImageStorageName"/>
            </div>
            <div class="form-group my-3">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ProductList">Listeye Dön</a>
</div>
