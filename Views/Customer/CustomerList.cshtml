@model List<MongoTestPro.Dtos.CustomerDtos.ResultCustomerDto>
@{
    ViewData["Title"] = "CustomerList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Müşteri Listesi</h1>
<hr />
<table class="table table-hover">
    <tr class="bg-warning">
        <th>#</th>
        <th>Müşteri Adı</th>
        <th>Telefon Numarası</th>
        <th>Mail</th>
        <th>Adres</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td>@item.Name @item.Surname</td>
            <td>@item.Email</td>
            <td>@item.PhoneNumber</td>
            <td>@item.Address</td>
            <td>@item.Status</td>
            <td>
                <a href="/Customer/DeleteCustomer/@item.CustomerId">Sil</a>
            </td>
            <td>
                <a href="/Customer/UpdateCustomer/@item.CustomerId">Güncelle</a>
            </td>
        </tr>
    }
</table>
<a href="/Customer/CreateCustomer/">+ Yeni Müşteri</a>