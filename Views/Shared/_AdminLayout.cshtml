@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>E-Ticaret | @ViewData["Title"]</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/sidebar/css/style.css">
</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <a href="#" class="img logo rounded-circle mb-5" style="background-image: url(/sidebar/images/defaultimage.png);"></a>
                <ul class="list-unstyled components mb-5">
                    <li >
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Kategori İşlemleri</a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            <li>
                                <a href="/Category/CategoryList/">Kategori Listesi</a>
                            </li>
                            <li>
                                <a href="/Category/CreateCategory/">Kategori Oluştur</a>
                            </li>
                        </ul>
                    </li>
                   @*  <li>
                        <a href="#">About</a>
                    </li> *@
                    <li>
                        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Ürün İşlemleri</a>
                        <ul class="collapse list-unstyled" id="pageSubmenu">
                            <li>
                                <a href="/Product/ProductList/">Ürün Listesi</a>
                            </li>
                            <li>
                                <a href="/Product/CreateProduct/">Ürün Ekle</a>
                            </li>

                        </ul>
                    </li>
                    <li>
                        <a href="#homeCustomer" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Müşteri İşlemleri</a>
                        <ul class="collapse list-unstyled" id="homeCustomer">
                            <li>
                                <a href="/Customer/CustomerList/">Müşteri Listesi</a>
                            </li>
                            <li>
                                <a href="/Customer/CreateCustomer/">Müşteri Oluştur</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#homeOrder" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Sipariş İşlemleri</a>
                        <ul class="collapse list-unstyled" id="homeOrder">
                            <li>
                                <a href="/Order/OrderList/">Sipariş Listesi</a>
                            </li>
                            <li>
                                <a href="/Order/CreateOrder/">Sipariş Oluştur</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#homeReport" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Rapor İşlemleri</a>
                        <ul class="collapse list-unstyled" id="homeReport">
                            <li>
                                <a href="/Report/Report/">Excel</a>
                            </li>
                            <li>
                                <a href="/Report/Report/">Pdf</a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <div class="footer">
                    <p>
                        Copyright &copy; @DateTime.Now.Year All rights reserved | This template is made with
                    </p>
                </div>

            </div>
        </nav>

        <!-- Page Content  -->
        <div id="content" >

            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">

                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="/Category/CategoryList/">Kategoriler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Product/ProductList/">Ürünler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Order/OrderList/">Siparişler</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Customer/CustomerList/">Müşteriler</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container">
                <div class="card bg-light rounded shadow-lg">
                    <div class="card-body">
                        @RenderBody()
                    </div>
                </div>

            </div>


        </div>
    </div>

    <script src="~/sidebar/js/jquery.min.js"></script>
    <script src="~/sidebar/js/popper.js"></script>
    <script src="~/sidebar/js/bootstrap.min.js"></script>
    <script src="~/sidebar/js/main.js"></script>
</body>
</html>