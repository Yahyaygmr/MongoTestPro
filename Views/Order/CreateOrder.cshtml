@using MongoTestPro.Dtos.CustomerDtos
@model MongoTestPro.Dtos.OrderDtos.CreateOrderDto

@{
    ViewData["Title"] = "Şipariş Oluştur";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card border-0">
    <div class="card border-0">
        <div class="card-header text-center bg-white border-0">
            <h1 class="h3">
                Sipariş Oluştur
            </h1>
        </div>
        <div class="card-body">
            <!-- Step Counter Starts -->
            <ul class="progressbar rb-step d-flex justify-content-center">
                <li class="process"></li>
                <li class=""></li>
                <li class=""></li>
            </ul>
            <!-- Step Counter Ends -->
        </div>
    </div>
    <hr />
</div>
<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="CustomerId" class="control-label">Müşteri</label>
            <select asp-for="CustomerId" class="form-control" required>
                <option>Müşteri Seçin</option>
                @foreach (var item in (List<ResultCustomerDto>)ViewBag.customers)
                {
                    <option value="@item.CustomerId">@item.Name @item.Surname</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="OrderAddress" class="control-label">Sipariş Adresi</label>
            <input asp-for="OrderAddress" class="form-control" required/>
            <span asp-validation-for="OrderAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="OrderDescription" class="control-label">Sipariş Notu</label>
            <input asp-for="OrderDescription" class="form-control" required/>
            <span asp-validation-for="OrderDescription" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <label class="form-check-label">
                <input class="form-check-input" asp-for="Status" />
                <label class="form-check-label">Aktif mi?</label>
            </label>
        </div>

        <div class="form-group">
            <input type="submit" value="Sonraki Adım" class="btn btn-primary" />
        </div>
    </form>
</div>

