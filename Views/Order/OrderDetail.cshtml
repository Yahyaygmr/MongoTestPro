@model List<MongoTestPro.Dtos.OrderRowDtos.ResultOrderRowWithProduct>
@{
    ViewData["Title"] = "OrderDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="row">
    <div class="col-12 text-center">
        <h2 class="text-warning">Sipariş Detayı</h2>
@*         <p>Thank you for your purchase!</p> *@
    </div>
</div>
<div class="row customer-info">
    @await Component.InvokeAsync("OrderDetailResultOrderAndCustomerComponentPartial", new { id = ViewBag.orderId })
   
</div>
<div class="row">
    <div class="col-12">

        <table class="table table-hover table-striped">
            <thead>
                <tr class="bg-warning">
                    <th>Ürün</th>
                    <th>Adet</th>
                    <th>Birim Fiyat</th>
                    <th>Tutar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.ProductCount</td>
                        <td>@item.ProductPrice.ToString("c")</td>
                        <td>@item.RowPrice.ToString("c")</td>
                    </tr>
                }


                <tr>
                    <td colspan="3" class="text-right bg-light"><strong>Toplam Tutar</strong></td>
                    <td>@(((decimal)ViewBag.totalPrice).ToString("c"))</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-12 text-center">
        <div class="row">
            <div class="col-md-4">
               
            </div>
            <div class="col-md-4">
                <a asp-action="OrderList" asp-controller="Order" class="btn btn-primary form-control">Sipariş Listesine Dön</a>
            </div>
        </div>
    </div>
</div>
